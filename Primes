// i <= sqrt(n)      power 2 sides
// i * i <= n        Integer version

bool isprime(ll n)
{   // O( sqrt(n)
   
    if(n == 2)    
    return true;
 
    if(n < 2 || n%2 == 0)   
    return false;
 
    for(ll i=3; i*i <= n; i+=2)
    {
        total_operations++;
        if(n%i == 0)
            return false;
    }
    return true;
}
